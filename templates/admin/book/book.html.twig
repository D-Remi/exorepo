{% extends 'admin/base.html.twig'%}

{% block main %}
    <form method="get" action="{{ path('admin_search_book') }}">
        <input type="text" name="search">
        <input type="submit" value="valider">
    </form>
    <article>
        {% for book in books %}
            <div class="container">
                <h2>{{ book.title }}</h2>
                <div><img src="http://placehold.it/75x120" class="resp"></div>
                <p>{{ book.author.name }}</p>
                <div>
                    <div class="btn-main"><a href="{{ path('admin_show_book', {'id': book.id}) }}">Voir le livre</a></div>
                    <div class="btn-main"><a href="{{ path('admin_delete_book', {'id': book.id}) }}">supprimer le livre</a></div>
                    <div class="btn-main"><a href="{{ path('admin_update_book', {'id': book.id}) }}">modifier le livre</a></div>
                </div>
            </div>
        {% endfor %}
    </article>
{% endblock %}