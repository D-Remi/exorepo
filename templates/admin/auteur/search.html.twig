{% extends 'admin/base.html.twig'%}

{% block main %}
    <article>
        {% for auteur in auteurs %}
            <div class="container">
                <h2>{{ auteur.name }}</h2>
                <h2>{{ auteur.firstname }}</h2>
                <div>{{ auteur.birthDate | date("d/m/Y") }}</div>
                <p>{{ auteur.deathDate | date("d/m/Y") }}</p>
                <p>{{ auteur.biography }}</p>
                {% for book in auteur.book %}
                    <p>{{ book.title }}</p>
                {% endfor %}
            </div>
        {% endfor %}
    </article>
{% endblock %}